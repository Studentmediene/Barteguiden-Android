<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"

        >


    <!--Search region-->
    <RelativeLayout
            android:id="@+id/tab2_search_region"
            android:layout_width="fill_parent"
            android:layout_height="43dp"
            android:padding="5dp"
            android:background="#333333"
            >


        <EditText
                android:id="@+id/tab2_search_field"

                android:layout_height="30dp"
                android:layout_width="fill_parent"
                android:paddingLeft="35dp"

                android:paddingRight="25dp"
                android:singleLine="true"

                android:background="@drawable/bg_search"

                />
        <ImageView
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_height="18dp"
                android:layout_width="20dp"
                android:src="@drawable/ic_search"/>

        <Button
                android:id="@+id/tab2_search_clear"

                android:layout_height="40dp"
                android:layout_width="40dp"
                android:visibility="gone"

                android:layout_alignParentRight="true"
                />
    </RelativeLayout>


    <!--Filter Region-->


    <LinearLayout
            android:id="@+id/tab2_filter_region"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_nav_bar"
            android:gravity="center"
            android:weightSum="3">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"


                >
            <Button
                android:id="@+id/tab2_button_all"

                android:layout_height="match_parent"
                android:layout_width="80dp"

                android:textColor="#c8c8c8"
                android:shadowColor="#000"
                android:shadowRadius="1"
                android:shadowDy="-1"

                android:background="@drawable/bt_left_on"

                android:text="All"/>

        <Button
                android:id="@+id/tab2_button_paid"
                android:layout_toRightOf="@id/tab2_button_all"
                android:layout_height="match_parent"
                android:layout_width="80dp"

                android:textColor="#c8c8c8"
                android:shadowColor="#000"
                android:shadowRadius="1"
                android:shadowDy="-1"

                android:background="@drawable/bt_midle_off"

                android:text="Paid"/>

        <Button
                android:id="@+id/tab2_button_free"
                android:layout_toRightOf="@id/tab2_button_paid"

                android:layout_height="match_parent"
                android:layout_width="80dp"

                android:textColor="#c8c8c8"
                android:shadowColor="#000"
                android:shadowRadius="1"
                android:shadowDy="-1"


                android:background="@drawable/bt_right_off"


                android:text="Free"/>
          </RelativeLayout>

    </LinearLayout>

    <TextView
            android:id="@+id/title_no_events"
            android:layout_height="match_parent"
            android:layout_width="match_parent"

            android:text="@string/no_events"
            android:gravity="center"/>

    <ListView
            android:id="@+id/tab2_events_list"

            android:layout_below="@id/tab2_search_region"
            android:layout_above="@id/tab2_filter_region"

            android:layout_height="fill_parent"
            android:layout_width="fill_parent"

            android:drawSelectorOnTop="false"

            android:divider="#caced4"
            android:dividerHeight="1px"

            android:padding="0dip"
            android:layout_margin="0dip"

            />


    <!--When the list is empty we use this textView to inform about this-->
    <TextView android:id="@+id/tab2_text"
              android:layout_height="fill_parent"
              android:layout_width="fill_parent"

              android:layout_below="@id/tab2_search_region"
              android:layout_above="@id/tab2_filter_region"

              android:gravity="center"
              android:visibility="gone"

              android:text="TAB2"/>

</RelativeLayout>