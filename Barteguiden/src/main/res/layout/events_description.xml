<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/desc_imageArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">

        <ImageView
            android:id="@+id/event_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_height"
            android:alpha="1"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_large"
            android:layout_alignTop="@+id/event_image"
            android:layout_alignBottom="@+id/event_image"
            android:layout_alignLeft="@+id/event_image"
            android:layout_alignRight="@+id/event_image">

            <!-- Price -->
            <TextView
                android:id="@+id/event_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="@string/p_price"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <!-- Age -->
            <TextView
                android:id="@+id/event_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/p_age"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_alignParentBottom="true" />

            <!-- Location -->
            <TextView
                android:id="@+id/event_place_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="@string/p_place"
                android:layout_below="@+id/event_title" />

            <!-- Title -->
            <TextView
                android:id="@+id/event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/p_band"
                android:textColor="@color/abs_white"
                android:textSize="@dimen/text_large"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true" />

            <ImageView
                android:id="@+id/event_category_id"
                android:layout_width="@dimen/icon_height"
                android:layout_height="@dimen/icon_height"
                android:src="@drawable/category_music"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/desc_calendarBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desc_imageArea"
        android:background="@drawable/white_box"
        android:paddingLeft="@dimen/margin_large"
        android:paddingRight="@dimen/margin_large"
        android:paddingTop="@dimen/margin_medium"
        android:paddingBottom="@dimen/margin_medium">

        <ImageView
            android:id="@+id/add_to_favorite"
            android:layout_width="@dimen/icon_height"
            android:layout_height="@dimen/icon_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:src="@drawable/fav_hurt_on" />

        <RelativeLayout
            android:id="@+id/add_to_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_list_white"
            android:clickable="true">

            <ImageView
                android:id="@+id/ic_calendar"
                android:layout_width="@dimen/icon_height"
                android:layout_height="@dimen/icon_height"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_calendar_off"
                android:layout_marginRight="@dimen/margin_medium" />

            <TextView
                android:id="@+id/event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ic_calendar"
                android:text="adsfasdfalksdjf"
                android:textColor="#000"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/calendar_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_date"
                android:layout_toRightOf="@id/ic_calendar"
                android:text="Add to calendar"
                android:textSize="11sp" />

        </RelativeLayout>


    </RelativeLayout>

    <ScrollView
        android:id="@+id/desc_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_medium"
            android:paddingTop="@dimen/margin_medium"
            android:paddingRight="@dimen/margin_medium">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/white_box"
                android:padding="@dimen/margin_medium">

                <TextView
                    android:id="@+id/title_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Description"
                    android:textColor="@color/grey_dark"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    android:id="@+id/event_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_below="@id/title_description"

                    android:layout_marginTop="5dp"

                    android:textColor="@color/black"
                    android:text="@string/p_band"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/text_small" />
            </LinearLayout>

            <!--Buttons-->
            <RelativeLayout
                android:id="@+id/bt_web"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/event_description"
                android:layout_marginTop="25dp"
                android:background="@drawable/bt_white"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"
                    android:text="Visit Website"
                    android:textColor="#555555"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:id="@+id/textView" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bt_map"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/bt_web"
                android:layout_marginTop="10dp"
                android:background="@drawable/bt_white"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"
                    android:text="Show on Map"
                    android:textColor="#555555"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bt_share"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/bt_map"
                android:layout_marginTop="10dp"
                android:background="@drawable/bt_white"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"
                    android:text="Share with Friends"
                    android:textColor="#555555"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>