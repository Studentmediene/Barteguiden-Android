<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Barteguiden.Theme" parent="Theme.AppCompat.Light"></style>

    <style name="desc_textview_shadowed">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="stickylist">
        <item name="android:divider">@color/transparent</item>
        <item name="android:dividerHeight">@dimen/margin_small</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:paddingLeft">@dimen/margin_medium</item>
        <item name="android:paddingRight">@dimen/margin_medium</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:fastScrollEnabled">true</item>
    </style>

    <style name="stickyheader">
        <item name="android:paddingLeft">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
        <item name="android:paddingTop">@dimen/margin_large</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/header</item>
    </style>

    <style name="listitem">
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:background">@drawable/white_box</item>
    </style>
</resources>
