<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">


        <RelativeLayout android:id="@+id/events_header"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_item_title_9">


            <TextView
                    android:id="@+id/events_date"

                android:layout_height="wrap_content"
                android:layout_width="fill_parent"

                android:paddingLeft="15dp"

                android:text="Date"

                    android:textColor="#542522"
                    android:textStyle="bold"

                    android:shadowColor="#c76d69"
                    android:shadowRadius="1"
                    android:shadowDx="1"
                    android:shadowDy="1"


                />


        </RelativeLayout>


        <RelativeLayout android:id="@+id/content"
                         android:layout_height="wrap_content"
                         android:layout_width="fill_parent"

                         android:layout_below="@id/events_header"
                    >





        <RelativeLayout
                android:id="@+id/events_field_radio_button"

                android:layout_height="60dp"
                android:layout_width="60dp"

                android:layout_alignParentRight="true"

                android:background="#fff"
                android:visibility="gone"
                >


            <CheckBox
                    android:id="@+id/events_item_favorite_add"
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:layout_centerInParent="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:button="@drawable/button_check_star"/>

        </RelativeLayout>


        <RelativeLayout
                android:id="@+id/event_item_content"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"

                android:layout_marginLeft="60dp"
                android:layout_toLeftOf="@id/events_field_radio_button"

                android:background="@drawable/bg_item_general_9"
                >

            <TextView
                android:id="@+id/events_price"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"

                android:layout_alignParentRight="true"

                android:text="Free"

                android:textColor="#484848"/>

            <TextView
                    android:id="@+id/events_title"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_width="fill_parent"

                    android:layout_toLeftOf="@id/events_price"

                    android:text="Turboneger"

                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    />
            <TextView
                    android:id="@+id/events_place"
                    android:layout_width="fill_parent"
                    android:layout_below="@id/events_title"
                    android:layout_height="wrap_content"



                    android:text="Events place..."

                    android:singleLine="true"
                    android:textColor="#484848"
                    />

        </RelativeLayout>

            <ImageView
                    android:id="@+id/events_image"
                    android:layout_height="wrap_content"
                    android:layout_width="60dp"

                    android:layout_alignBottom="@id/event_item_content"
                    android:layout_alignTop="@id/event_item_content"
                    android:adjustViewBounds="true"

                    android:scaleType="centerInside"

                    android:padding="2px"

                    android:background="#7d7d7d"/>

        </RelativeLayout>


</RelativeLayout>